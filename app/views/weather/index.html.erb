<div class="container mx-auto p-4 max-w-2xl">
  <h1 class="font-bold">Weather Lookup</h1>

  <div class="card bg-base-100 shadow-xl p-6 mt-4">
    <form action="/weather" method="get" class="mt-4">
      <div class="flex items-center space-x-2">
        <div data-controller="autocomplete" class="flex-1">
          <label class="input w-full">
            <span data-autocomplete-target="spinner" class="hidden loading loading-spinner loading-xs opacity-50"></span>
            <svg data-autocomplete-target="svg" class="h-[1em] opacity-50" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><g stroke-linejoin="round" stroke-linecap="round" stroke-width="2.5" fill="none" stroke="currentColor"><circle cx="11" cy="11" r="8"></circle><path d="m21 21-4.3-4.3"></path></g></svg>
            <input type="text"
                  name="location"
                  placeholder="Enter Location"
                  class="input input-bordered w-full"
                  data-autocomplete-target="input"
                  data-action="input->autocomplete#search" />
          </label>
          <ul data-autocomplete-target="results"
              class="hidden absolute z-50 bg-white border border-gray-300 w-full max-w-md shadow-lg"></ul>
        </div>

        <button type="submit" class="btn btn-primary flex-none">Get Weather</button>
      </div>
    </form>
  </div>
</div>
